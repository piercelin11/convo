{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",         
    "moduleResolution": "bundler", 
    "declaration": true,
    "declarationMap": true,    
    "sourceMap": true,       
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}