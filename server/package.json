{
	"name": "server",
	"version": "1.0.0",
	"type": "module",
	"main": "src/server.ts",
	"scripts": {
		"build": "tsc",
		"start": "node dist/server.js",
		"dev": "nodemon --exec tsx src/server.ts",
		"lint": "eslint . --ext .ts --fix",
		"prettier": "prettier --write \"src/**/*.ts\"",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
		"migrate": "node-pg-migrate --tsx",
		"migrate:create": "node-pg-migrate create -j ts --tsx",
		"migrate:up": "node-pg-migrate up --tsx",
		"migrate:down": "node-pg-migrate down --tsx",
		"migrate:status": "node-pg-migrate status --tsx",
		"typecheck": "tsc -b"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@convo/shared": "*",
		"bcryptjs": "^3.0.2",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"pg": "^8.16.0",
		"socket.io": "^4.8.1",
		"zod": "^3.25.20"
	},
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@types/cors": "^2.8.18",
		"@types/express": "^5.0.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.17",
		"@types/pg": "^8.15.1",
		"@typescript-eslint/eslint-plugin": "^8.32.1",
		"@typescript-eslint/parser": "^8.32.1",
		"cross-env": "^7.0.3",
		"eslint": "^9.26.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-jsdoc": "^50.6.17",
		"eslint-plugin-prettier": "^5.4.0",
		"globals": "^16.1.0",
		"jest": "^29.7.0",
		"node-pg-migrate": "^7.9.1",
		"nodemon": "^3.1.10",
		"prettier": "^3.5.3",
		"ts-jest": "^29.3.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1"
	}
}
